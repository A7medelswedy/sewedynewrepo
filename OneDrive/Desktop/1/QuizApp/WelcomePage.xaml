<Window x:Class="QuizApp.WelcomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome Page" Height="300" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Welcome to the Quiz" Style="{StaticResource TextStyle}" FontSize="24"/>
        <Button Content="Start Quiz" Style="{StaticResource ButtonStyle}" Click="StartQuizButton_Click"/>
    </StackPanel>
</Window>
