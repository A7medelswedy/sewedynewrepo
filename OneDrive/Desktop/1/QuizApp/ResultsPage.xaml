<Window x:Class="QuizApp.ResultsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Results Page" Height="300" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="ScoreText" Style="{StaticResource TextStyle}" FontSize="20"/>
        <Button Content="Restart Quiz" Style="{StaticResource ButtonStyle}" Click="RestartButton_Click"/>
    </StackPanel>
</Window>
